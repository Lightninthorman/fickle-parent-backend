
Header always set Access-Control-Allow-Origin "*"
Header always set Access-Control-Allow-Methods "POST, GET, OPTIONS, DELETE, PUT"
Header always set Access-Control-Allow-Headers "Content-Type"

RewriteEngine On

RewriteCond %{REQUEST_METHOD} ^GET$
RewriteRule ^fickle-parent/(.*)$ controllers/entries_controller.php?action=index&user=$1

RewriteCond %{REQUEST_METHOD} ^POST$
RewriteRule ^fickle-parent/$ controllers/entries_controller.php?action=create

RewriteCond %{REQUEST_METHOD} ^DELETE$
RewriteRule ^fickle-parent/(.*)/([0-9]+)$ controllers/entries_controller.php?action=delete&user=$1&id=$2

RewriteCond %{REQUEST_METHOD} ^PUT$
RewriteRule ^fickle-parent/([0-9]+)$ controllers/entries_controller.php?action=update&id=$1

RewriteCond %{REQUEST_METHOD} ^OPTIONS$
RewriteRule ^(.*)$ $1 [R=200,L]
